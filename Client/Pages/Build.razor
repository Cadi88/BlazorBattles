@page "/build"
@inject BlazorBattles.Client.Services.IBananaService BananaService

<h3>Build</h3>

<button @onclick="() => EatBananas(10)">Eat bananas</button>

@code {
    private void EatBananas(int amount)
    {
        BananaService.EatBananas(amount);
    }

    private void AddBananas(int amount)
    {
        BananaService.AddBananas(amount);
    }
}
