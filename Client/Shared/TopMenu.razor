@inject BlazorBattles.Client.Services.IBananaService BananaService
@implements IDisposable

<div class="top-menu">
    <img src="Icons/I_C_Banana.png" alt="" />
    <span class="popover-header">
        @BananaService.Bananas
    </span>
    <AddBananas BananasAdded="AddBananas"></AddBananas>
</div>

@code {
    [Parameter]
    public int Bananas { get; set; } = 100;

    public void AddBananas(int value)
    {
        Bananas += value;
    }

    protected override void OnInitialized()
    {
        BananaService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        BananaService.OnChange -= StateHasChanged;
    }
}
